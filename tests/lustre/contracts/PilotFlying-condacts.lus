contract PFS_global_spec_R1_R4
  (TS, CLK1, CLK3, CLK2, CLK4 : bool)
returns
  (LPFS, RPFS : bool) ;
let

  -- |===| Requirements.

  -- Clocks are quasi synchronous.
  require calendar(CLK1, CLK3, CLK2, CLK4) ;
  -- At least one clock tick per cycle.
  require CLK1 or CLK2 or CLK3 or CLK4 ;

  -- |===| Ensures.

  -- At least one side is flying.
  ensure LPFS or RPFS ;
  -- Left side is flying at init.
  ensure LPFS -> true ;
tel

contract PFS_contract_R2
  (TS, CLK1, CLK3, CLK2, CLK4 : bool)
returns
  (LPFS, RPFS : bool) ;
let
  require quiescent(TS, CLK1, CLK2, CLK3, CLK4) ;
  ensure  LPFS = not RPFS ;
tel

contract PFS_contract_R3
  (TS, CLK1, CLK3, CLK2, CLK4 : bool)
returns
  (LPFS, RPFS : bool) ;
let
  require true -> pre quiescent(TS, CLK1, CLK2, CLK3, CLK4) ;
  ensure  true -> (
    (not pre LPFS and PRESSED_SEEN(TS, CLK1) => LPFS) and
    (not pre RPFS and PRESSED_SEEN(TS, CLK3) => RPFS)
  ) ;
tel

contract PFS_contract_R5
  (TS, CLK1, CLK3, CLK2, CLK4 : bool)
returns
  (LPFS, RPFS : bool) ;
let
  require quiescent(TS, CLK1, CLK2, CLK3, CLK4) ;
  ensure  not (CHANGED(RPFS) or CHANGED(LPFS)) ;
tel



